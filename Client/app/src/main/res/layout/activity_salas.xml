<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalasActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:text="Salas de bate-papo"
        android:textSize="30sp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/lbl_geral"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/group"
            android:text="  Sala Geral"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_geral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar" />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_eventos"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/group"
            android:text="  Sala de Eventos"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar" />

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_oportunidades"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/group"
            android:text="  Sala oportunidades"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_oportunidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_offtopic"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/group"
            android:text="  Sala OffTopic"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_offtopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar" />

    </LinearLayout>

</LinearLayout>